<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Naziv</th>
      <th>Opis</th>
      <th>Ukupno</th>
      <th>Do sada</th>
      <th>Aktivan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.naziv %></td>
        <td><%= project.opis %></td>
        <td><%= project.ukupno %></td>
        <td><%= project.do_sada %></td>
        <td><%= project.aktivan %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

